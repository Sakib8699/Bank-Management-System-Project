<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bank.management.system.project.AddEmployeesController">
    <children>
        <AnchorPane fx:id="main_form" prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom right, #2d658c, #2ca772);">
            <children>
                <Pane layoutX="50.0" layoutY="50.0" prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 10;">
                    <children>
                        <Label layoutX="20.0" layoutY="20.0" text="Employee Management" textFill="#2d658c">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        
                        <!-- Employee Form -->
                        <VBox layoutX="20.0" layoutY="60.0" spacing="10.0">
                            <HBox spacing="10.0">
                                <VBox spacing="5.0">
                                    <TextField fx:id="employeeName" prefWidth="250.0" promptText="Full Name" />
                                </VBox>
                                <VBox spacing="5.0">
                                    <TextField fx:id="employeePosition" prefWidth="250.0" promptText="Position" />
                                </VBox>
                            </HBox>
                            
                            <HBox spacing="10.0">
                                <VBox spacing="5.0">
                                    <TextField fx:id="employeePhone" prefWidth="250.0" promptText="Phone Number" />
                                    <Button fx:id="addEmployeeBtn" onAction="#addEmployee" prefHeight="35.0" prefWidth="250.0" style="-fx-background-color: #2d658c; -fx-text-fill: white; -fx-font-weight: bold;" text="Add Employee" />
                                </VBox>
                                <VBox spacing="5.0">
                                    <TextField fx:id="employeeEmail" prefWidth="250.0" promptText="Email" />
                           <TextField fx:id="employeeSalary" layoutX="10.0" layoutY="33.0" prefWidth="250.0" promptText="Salary">
                              <font>
                                 <Font size="13.0" />
                              </font>
                           </TextField>
                                </VBox>
                            </HBox>
                           
                           <!-- Employee Table -->
                           <TableView fx:id="employeeTable" prefHeight="226.0" prefWidth="760.0">
                               <columns>
                                   <TableColumn fx:id="nameCol" prefWidth="150.0" text="Name" />
                                   <TableColumn fx:id="positionCol" prefWidth="120.0" text="Position" />
                                   <TableColumn fx:id="phoneCol" prefWidth="120.0" text="Phone" />
                                   <TableColumn fx:id="emailCol" prefWidth="150.0" text="Email" />
                                   <TableColumn fx:id="salaryCol" prefWidth="100.0" text="Salary" />
                                   <TableColumn fx:id="actionCol" prefWidth="70.0" text="Action" />
                                   <TableColumn fx:id="idCol" prefWidth="50.0" text="ID" />
                               </columns>
                           </TableView>
                     <Label text="Label" />
                            
                            <HBox spacing="10.0">
                                <VBox spacing="5.0" />
                                <VBox alignment="BOTTOM_LEFT" spacing="5.0" />
                            </HBox>
                        </VBox>
                        
                        <!-- Search and Refresh -->
                        <HBox layoutX="20.0" layoutY="460.0" spacing="10.0">
                            <TextField fx:id="searchField" prefWidth="200.0" promptText="Search employees..." />
                            <Button fx:id="searchBtn" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Search" />
                            <Button fx:id="refreshBtn" style="-fx-background-color: #2980b9; -fx-text-fill: white;" text="Refresh" />
                        </HBox>
                    </children>
                </Pane>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
